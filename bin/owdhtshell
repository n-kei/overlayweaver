#!/bin/sh

program=$0
while test -h $program; do
	program=`readlink $program`
done

cygwin=false
case "`uname`" in
  CYGWIN*) cygwin=true ;;
esac

BIN_DIR=`dirname $program`
OW_HOME=${OW_HOME:-$BIN_DIR/..}
LIB_DIR=$OW_HOME/lib
TARGET_DIR=$OW_HOME/target
BUILD_DIR=$OW_HOME/build

CLASSPATH=$BUILD_DIR:$TARGET_DIR/overlayweaver.jar:$LIB_DIR/je-5.0.73.jar:$LIB_DIR/xmlrpc-common-3.1.3.jar:$LIB_DIR/xmlrpc-server-3.1.3.jar:$LIB_DIR/ws-commons-util-1.0.2.jar:$LIB_DIR/commons-cli-1.2.jar:$LIB_DIR/servlet-api-3.0.jar:$LIB_DIR/jetty-server-9.0.3.v20130506.jar:$LIB_DIR/jetty-servlet-9.0.3.v20130506.jar:$LIB_DIR/jetty-util-9.0.3.v20130506.jar:$LIB_DIR/jetty-http-9.0.3.v20130506.jar:$LIB_DIR/jetty-security-9.0.3.v20130506.jar:$LIB_DIR/jetty-io-9.0.3.v20130506.jar:$LIB_DIR/jetty-continuation-9.0.3.v20130506.jar:$LIB_DIR/clink200.jar
LOGGING_CONFIG=$BIN_DIR/logging.properties
if $cygwin; then
  CLASSPATH=`cygpath --path --windows "$CLASSPATH"`
  LOGGING_CONFIG=`cygpath --path --windows "$LOGGING_CONFIG"`
fi
export CLASSPATH

JVM_OPTION="-Xss110k"
#JVM_OPTION="-server -Xss110k -Xmx250m"

exec java $JVM_OPTION -Djava.util.logging.config.file=$LOGGING_CONFIG ow.tool.dhtshell.Main "$@"
